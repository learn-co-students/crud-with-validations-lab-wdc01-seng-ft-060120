<% if @song.errors.any? %>
    <ul>
    <% @song.errors.full_messages do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @song do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :artist_name, "Artist" %>
<%= f.text_field :artist_name %>
<%= f.label :genre %>
<%= f.text_field :genre %>
<%= f.label :released, "Released?" %>
<%= f.check_box :released %>
<%= f.label :release_year %>
<%= f.number_field :release_year, min: 1950, max: Date.current.year, step: 1 %>
<%= f.submit %>
<% end %>
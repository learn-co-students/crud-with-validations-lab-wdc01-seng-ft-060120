<div class="error_list">  <% if @song.errors.any? %>
    <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_for @song do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :release_year, "Release Year" %>
  <%= f.text_field :release_year %>
  <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre, "Genre" %>
  <%= f.text_field :genre %>
  <%= f.label :released, "Released" %>
  <%= f.text_field :released %>
  <%= f.submit %>
<% end %>